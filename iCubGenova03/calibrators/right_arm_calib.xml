        <group name="GENERAL">             
            <param name="joints"> 8 </param>             
            <param name="deviceName"> Right_Arm_Calibrator </param>    
        </group>             
 
<!--USE THIS FOR CAN ROBOT MOTOR CONTROL-->
<group name="HOME">
