        <param name="cur_maxInt">           32000       32000       </param>
	    <param name="cur_ko">               0            0          </param>
        <param name="cur_stictionUp">       0            0          </param>
        <param name="cur_stictionDwn">      0            0          </param>
        <param name="cur_kff">              0            0          </param>
    </group>

