 <!-- Initialization file for EMS 9 - Right Lower Leg, 2 dof -->


  <device xmlns:xi="http://www.w3.org/2001/XInclude" name="right_leg-eb9-j4_5-mc" type="embObjMotionControl">
      <xi:include href="../../general.xml" />
