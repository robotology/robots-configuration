<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">


	<device xmlns:xi="http://www.w3.org/2001/XInclude" name="mc4plusloco_calibrator" type="parametricCalibratorEth">
                <xi:include href="../general.xml" />
                
		<group name="GENERAL">
		    <param name="joints"> 4 </param> <!-- the number of joints of the robot part -->
		    <param name="deviceName"> MC4plusloco_Calibrator </param> <!-- forse non e' funzionale ma serve solo per debug -->
		</group>

        <group name="HOME">
		    <param name="positionHome">           0         0      0     0</param>
		    <param name="velocityHome">           20        20     20    20</param>
		</group>

		<group name="CALIBRATION">
		    <param name="calibrationType">        3         3      3     3</param>
		    <param name="calibration1">           0         0      0     0</param> <!-- used pwm  -->
		    <param name="calibration2">           0         0      0     0      </param> 
		    <param name="calibration3">           0         0      0     0      </param> 
            <param name="calibration4">           0         0      0     0      </param> 
            <param name="calibration5">           0         0      0     0      </param> 


            <param name="calibrationZero">         0.0      0      0     0     </param>
            <param name="calibrationDelta">        0.0      0      0     0     </param>

		    <param name="startupPosition">        0.0       0      0     0     </param> <!-- target position in deg after high level calib is terminated --> 
		    <param name="startupVelocity">       20.0       20     20.0       20</param> <!-- and its velocity in deg/sec -->
		    <param name="startupMaxPwm">         3360        3360     0        1500</param> <!-- max pwm used in calib (it is a pid param)-->
		    <param name="startupPosThreshold">     1          1       1            1</param> <!-- tolerance of position in deg relative to positionZero param -->  
		    <param name="startupDisablePosCheck">  1          1       1            1</param>
		    <param name="calibrationTimeout">     1.0        1.0     1.0          1.0</param>
		</group>

		

 
		<param name="CALIB_ORDER"> (2 3) </param>	<!-- order of calibration-goto-zero in parallel. within () they can go in parallel -->

		<action phase="startup" level="10" type="calibrate">
		    <param name="target">devmc4plusloco_mc_wrapper</param>
		</action>

		<action phase="interrupt1" level="1" type="park">
		    <param name="target">devmc4plusloco_mc_wrapper</param>
		</action>

		<action phase="interrupt3" level="1" type="abort" />

	</device>


