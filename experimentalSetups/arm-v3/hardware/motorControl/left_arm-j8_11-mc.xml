    <device xmlns:xi="http://www.w3.org/2001/XInclude" name="left_arm-j8_11-mc" type="embObjMotionControl">
    
        <xi:include href="../../general.xml" />
        <xi:include href="hardware/electronics/left_arm-j8_11-eln.xml" />
