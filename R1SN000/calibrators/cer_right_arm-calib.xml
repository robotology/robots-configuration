<group name="CALIBRATION">                                                                                                     
<param name="calibrationType">                    3          3          3         3         10      8          8          8                     </param>
<param name="calibration1">                       0          0          0         0         -250    -1500      -1500      -1500                 </param>
<param name="calibration2">                       0          0          0         0         0       700        700        700                   </param>
