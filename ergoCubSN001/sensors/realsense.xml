<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE robot PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">

<devices>

  <device xmlns:xi="http://www.w3.org/2001/XInclude" name="realsenseD450" type="realsense2">
    <group name="SETTINGS">
      <param extern-name= "depthResolution" name="depthResolution"> (640 480) </param>
      <param extern-name= "rgbResolution" name="rgbResolution">  (640 480) </param>
      <param name="framerate">    30  </param>
      <param extern-name="enableEmitter" name="enableEmitter"> true </param>
      <param name="alignmentFrame"> RGB </param>
    </group>
    <group name="HW_DESCRIPTION">
      <param name="clipPlanes"> (0.2 10.0) </param>
    </group>
    <group name="QUANT_PARAM">
      <param name="depth_quant"> 2 </param>
    </group>
    <param name="rotateImage180"> false </param>
    <param name="stereoMode"> true </param>
  </device>

  <device xmlns:xi="http://www.w3.org/2001/XInclude" name="RGBDWrapperyarp" type="rgbdSensor_nws_yarp">
    <param name="period"> 0.03 </param>
    <param extern-name="name" name="name">    /depthCamera </param>
    <action phase="startup" level="10" type="attach">
      <paramlist name="networks">
        <elem name="subdevicergbd"> realsenseD450 </elem>
      </paramlist>
    </action>
    <action phase="shutdown" level="15" type="detach" />
  </device>

  <device xmlns:xi="http://www.w3.org/2001/XInclude" name="IRCamerasWrapperyarp" type="frameGrabber_nws_yarp">
    <param name="period"> 0.03 </param>
    <param extern-name="ir_name" name="name">  /depthCamera/ir:o </param>
    <param name="capabilities">    RAW </param>
    <action phase="startup" level="10" type="attach">
      <paramlist name="networks">
        <elem name="subdevicergbd"> realsenseD450 </elem>
      </paramlist>
    </action>
    <action phase="shutdown" level="15" type="detach" />
  </device>

</devices>
